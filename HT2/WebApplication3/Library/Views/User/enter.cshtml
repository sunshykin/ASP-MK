@model Library.Models.UserModel
@section Title {
    Вход в аккаунт
}
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3>Выполните вход в свой аккаунт</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <div class="form-group">
                Введите никнэйм:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nick, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nick, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Введите пароль:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit">Войти</button>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Статистика", "page") | @Html.ActionLink("Список книг", "Index", "Home")
    </div>
